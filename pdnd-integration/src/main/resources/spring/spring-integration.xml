<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/context 
                        http://www.springframework.org/schema/context/spring-context-3.1.xsd
                        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">


	<context:component-scan base-package="it.csi.staris.pdnd.integration" />

	<!-- Process annotations on registered beans like @Autowired... -->
	<context:annotation-config />
	
	<!-- 
	<import resource="spring-datasource-jta.xml" />
	 -->
	
	<!-- 
	 <property name="address"      value="${starissrv.service.endpoint.url}"/>
	
	 -->
	
	<!-- STARISSRV FACADE -->
    <bean id="serviziorissrvSrvCxfMinimmi" lazy-init="false" class="it.csi.staris.starissrv.interfacews.serviziorissrv.ServiziorissrvSrv" factory-bean="serviziorissrvSrvCxfFactory" factory-method="create"/>

    <bean id="serviziorissrvSrvCxfFactory" class="org.apache.cxf.jaxws.JaxWsProxyFactoryBean">
        <property name="serviceClass" value="it.csi.staris.starissrv.interfacews.serviziorissrv.ServiziorissrvSrv"/>
        <property name="address"      value="${starissrv.service.endpoint.url}"/>
    </bean>
    
    
    
    <jaxws:client id="serviziorissrvSrvCxf"
                  serviceClass="it.csi.staris.starissrv.interfacews.serviziorissrv.ServiziorissrvSrv"
                  address="http://tst-applogic.reteunitaria.piemonte.it/starissrvApplServiziorissrvWs/starissrvServiziorissrvOpen" />

</beans>

